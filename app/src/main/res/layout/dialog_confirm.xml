<?xml version="1.0" encoding="utf-8"?><!-- 文件路径：res/layout/dialog_layout.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认要参加吗"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/confirm_yes_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="180dp"
            android:layout_weight="1"
            android:background="@color/group_blue"
            android:gravity="center|center"
            android:text="确认"
            android:textColor="@color/group_white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/confirm_no_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#DC0E0E"
            android:text="取消"
            android:textColor="@color/group_white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>