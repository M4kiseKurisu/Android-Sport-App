<?xml version="1.0" encoding="utf-8"?><!-- 文件路径：res/layout/dialog_layout.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_white"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_activity_title"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:gravity="right"
            android:text="创建活动"
            android:textColor="@color/group_deepBlue"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/group_deepBlue"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/group_activity_create_close_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:text="Close"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/group_activity_create_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="活动名称"
            android:textColor="@color/group_black" />

        <EditText
            android:id="@+id/group_activity_create_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="活动地点" />
        <EditText
            android:id="@+id/group_activity_create_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="活动简介" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="start|center"
                android:padding="5dp"
                android:text="活动开始时间:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/group_activity_create_startTime"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center"
                android:hint="请选择时间"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="start|center"
                android:padding="5dp"
                android:text="活动结束时间:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/group_activity_create_endTime"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="请选择时间"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="start|center"
                android:padding="5dp"
                android:text="活动类型:"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/group_activity_create_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/group_activity_create_confirm_button"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/group_blue"
        android:text="完成"
        android:textColor="@color/group_white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>